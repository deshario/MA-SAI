<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/primary_bootstrap">

    <Button
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:textColor="@color/default_bootstrap"
        android:id="@+id/show_button"
        android:background="@color/success_bootstrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="เพิ่มรายการใหม่" />

    <Button
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:textColor="@color/default_bootstrap"
        android:id="@+id/delete_button"
        android:background="@color/danger_bootstrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ลบรายการ" />




</LinearLayout>

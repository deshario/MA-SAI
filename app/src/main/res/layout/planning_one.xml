    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/col1"
            android:background="#ffffffff"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".8">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!--<TextView-->
                    <!--android:textSize="20.0sp"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="การวางแผนผลผลิต" />-->


                <!--<View-->
                    <!--android:background="@color/success_bootstrap"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="2.0dip"-->
                    <!--android:layout_marginTop="10.0dip" />-->

                <TextView
                    android:textSize="18sp"
                    android:textColor="#80000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="พื้นที่เกษตร" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_success_border"
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="จำนวนไร่"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:drawableLeft="@drawable/ic_place_817d8f_24dp"
                    />

                <TextView
                    android:textSize="18sp"
                    android:textColor="#80000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="ชื่อรายการ" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_success_border"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint=" เช่น : ชื่อพืช"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_filter_vintage_817d8f_24dp"
                    />

                <TextView
                    android:textSize="18sp"
                    android:textColor="#80000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="คาดการณ์รายได้" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_success_border"
                    android:id="@+id/income"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="บาท/ไร่"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:drawableLeft="@drawable/ic_attach_money_817d8f_24dp"
                    />

                <TextView
                    android:textSize="18sp"
                    android:textColor="#80000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dip"
                    android:text="รายได้" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_success_border"
                    android:id="@+id/area_x_income"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="0 บาท"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:focusable="false"
                    android:textIsSelectable="true"
                    android:drawableLeft="@drawable/ic_attach_money_817d8f_24dp"
                    />


                <TextView
                    android:textSize="18sp"
                    android:textColor="#80000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.0dip"
                    android:text="วันที่คาดการณ์" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_success_border"
                    android:id="@+id/date_income"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="วันที่/เดือน/พ.ศ"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:focusable="false"
                    android:textIsSelectable="true"
                    android:drawableLeft="@drawable/ic_date_range_817d8f_24dp"
                    />

                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dip">

                    <Button
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/default_bootstrap"
                        android:id="@+id/saveincome"
                        android:background="@color/light_success"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="บันทึกข้อมูล" />

                    <!--<Button-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:textSize="16sp"-->
                        <!--android:textColor="@color/default_bootstrap"-->
                        <!--android:id="@+id/cleardata"-->
                        <!--android:background="@color/danger_bootstrap"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="ล้างข้อมูล" />-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

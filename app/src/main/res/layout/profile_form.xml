<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/custom_background_disabled">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="คำนำหน้า"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:id="@+id/weekss_sstxt" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/prefix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="กรุณาเลือกคำนำหน้า"
        android:textColorHint="#05ab9a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="ชื่อ"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_info_border"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="นามสกุล"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_info_border"
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="วันเกิด"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_info_border"
        android:id="@+id/birthdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:inputType="date"
        android:focusable="false"
        android:textIsSelectable="true"
        android:drawableLeft="@drawable/ic_date_range_817d8f_24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="สถานะ"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:id="@+id/weekss_txt" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="กรุณาเลือกสถานะ"
        android:textColorHint="#05ab9a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="จน.สมาชิกในบ้าน"
                android:textColor="#80000000"
                android:textSize="14sp" />

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_info_border"
                android:id="@+id/nasme"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:drawableLeft="@drawable/ic_group_817d8f_24dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="รายได้ต่อเดือน"
                android:textColor="#80000000"
                android:textSize="14sp" />

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_info_border"
                android:id="@+id/nasmse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:drawableLeft="@drawable/ic_attach_money_817d8f_24dp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="ที่อยู่"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_info_border"
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:inputType="text"
        android:lines="2"
        android:drawableLeft="@drawable/ic_place_817d8f_24dp"
        />



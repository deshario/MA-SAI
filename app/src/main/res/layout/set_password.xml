<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primary_bootstrap">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_primary"
        android:alpha=".8"
        app:titleTextColor="@color/default_bootstrap"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/changePass"
            android:textColor="@color/mdtp_white"
            android:textSize="20sp"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/col1"
            android:background="#ffffffff"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:alpha=".8">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title1"
                    android:textSize="18sp"
                    android:textColor="#80000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รหัสผ่านเก่า" />

                <EditText
                    android:id="@+id/oldPass"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_info_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:inputType="numberPassword"
                    android:drawablePadding="6dp"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:paddingStart="10dp"
                    android:maxLength="5"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp" />

                <TextView
                    android:id="@+id/title2"
                    android:textSize="18sp"
                    android:textColor="#80000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.0dip"
                    android:text="รหัสผ่านใหม่" />

                <EditText
                    android:id="@+id/newPass"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_info_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:inputType="numberPassword"
                    android:drawablePadding="6dp"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:paddingStart="10dp"
                    android:maxLength="5"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dip"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/default_bootstrap"
                        android:background="@color/deep_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:text="ยกเลิก" />


                    <Button
                        android:id="@+id/submit"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/default_bootstrap"
                        android:background="@color/material_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ตกลง" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

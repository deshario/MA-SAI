<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deshario.agriculture">

    <application
        android:name=".Config.AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="AA_DB_NAME"
            android:value="agriculture.db" />

        <meta-data android:name="AA_DB_VERSION"
            android:value="2" />

        <meta-data android:name="AA_DB_MODELS"
            android:value="com.deshario.agriculture.Models.Records, com.deshario.agriculture.Models.Category" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main_Tab" android:configChanges="orientation|screenSize" android:launchMode="singleTop" />
        <activity
            android:name=".AddRecords" android:configChanges="orientation|screenSize" android:launchMode="singleTop" />
        <activity
            android:name=".Thaidate" android:configChanges="orientation|screenSize" android:launchMode="singleTop" />
        <activity android:name=".Cal_Date"/>
    </application>

</manifest>